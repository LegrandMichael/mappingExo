{% extends 'base.html.twig' %}

{% block body %}
    <h1>Purchases list</h1>

    <table>
        <thead>
            <tr>
                <th>Order Number</th>
                <th>Date</th>
                <th>Total Price</th>
                <th>Client Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for purchase in purchases %}
            <tr>
                <td><a href="{{ path('admin_purchase_show', { 'id': purchase.id }) }}">{{ purchase.id }}</a></td>
                <td>{{ purchase.date }}</td>
                <td>{{ purchase.totalPrice }}</td>
                <td><a href="{{ path('admin_user_show', { 'id' : purchase.user.id }) }}">{{ purchase.user }}</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_purchase_show', { 'id': purchase.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_purchase_edit', { 'id': purchase.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_purchase_new') }}">Create a new purchase</a>
        </li>
    </ul>
{% endblock %}
