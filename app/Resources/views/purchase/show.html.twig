{% extends 'base.html.twig' %}

{% block body %}
    <h1>Purchase</h1>

    <table>
        <tbody>
            <tr>
                <th>Order Number</th>
                <td>{{ purchase.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ purchase.date }}</td>
            </tr>
            <tr>
                <th>Total Price</th>
                <td>{{ purchase.totalPrice }}</td>
            </tr>
            <tr>
                <th>Client Name</th>
                <th>{{ purchase.user }}</th>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_purchase_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_purchase_edit', { 'id': purchase.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
